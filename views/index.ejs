<%- include('layout_head') -%>
<% if (user) { %>
  <p><%= currentUser.username %></p>
  <p><%= currentUser.email %></p>
  <p><%= currentUser.password %></p>
  <p><%= currentUser.creationDate %></p>
  <p><%= currentUser.class %></p>
  <p><%= currentUser._id %></p>
  <p><%= currentUser.url %></p>
<% } else { %>
<div class="container-sm" style="width: 400px">
  <h2 style="margin-bottom: 24px;">Login</h2>
  <form method="POST">
    <div class="mb-3">
      <label for="username" class="form-label">Username</label>
      <input type="username" class="form-control" id="username" aria-describedby="usernameHelp" name="username">
    </div>
    <div class="mb-3">
      <label for="password" class="form-label">Password</label>
      <input type="password" class="form-control" id="password" name="password">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>
<% } %>
<%- include('layout_foot') -%>
